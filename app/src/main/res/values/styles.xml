<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
        <item name="colorPrimary">#B7F2AB39</item>
        <item name="colorPrimaryDark">#B7F2AB39</item>
        <item name="colorAccent">#558B2F</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBar.Transparent</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#B7F2AB39</item>
        <item name="colorPrimaryDark">#B7F2AB39</item>
        <item name="colorAccent">#558B2F</item>
    </style>

    <style name="popupTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#B7F2AB39</item>
        <item name="colorPrimaryDark">#B7F2AB39</item>
        <item name="colorAccent">#558B2F</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBar.Transparent</item>
    </style>

    <style name="RadioButton" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorAccent">#ffffff</item>
        <item name="colorControlNormal">#ffffff</item>
        <!--<item name="color">#ffffff</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme">
        <item name="android:divider">#FFFFFF</item>
        <item name="elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">#B7F2AB39</item>
        <item name="colorPrimaryDark">#B7F2AB39</item>
        <item name="android:textColor">@color/login_form_details_dark</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

</resources>
